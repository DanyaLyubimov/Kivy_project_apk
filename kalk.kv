<Button>
    background_normal:""
    background_color: (1,1,1)

<Label>
    color: (0,0,0)

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            multiline: False
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: (1, 0.15)
        GridLayout:

            cols: 4
            rows: 5
            spacing: 4

            Button:
                size_hint: (0.25,0.2)
                background_color: (157/255, 157/255, 157/255)
                font_size: 48
                text: "%"
            Button:
                background_color: (157/255, 157/255, 157/255)
                size_hint: (0.25,0.2)
                font_size: 48
                text: u"\u00AB"
                on_press: root.remove()
            Button:
                id: clear
                background_color: (157/255, 157/255, 157/255)
                size_hint: (0.25,0.2)
                font_size: 48
                text: "C"
                on_press: root.clear()
            Button:
                background_color: (157/255, 157/255, 157/255)
                size_hint: (0.25,0.2)
                font_size: 48
                text: "/"
                on_press: root.math_sign('/')

            Button:
                size_hint: (0.2,0.2)
                font_size: 48
                text: "7"
                on_press: root.button_press(7)
            Button:
                size_hint: (0.2,0.2)
                font_size: 48
                text: "8"
                on_press: root.button_press(8)
            Button:
                size_hint: (0.2,0.2)
                font_size: 48
                text: "9"
                on_press: root.button_press(9)
            Button:
                background_color: (157/255, 157/255, 157/255)
                size_hint: (0.2,0.2)
                font_size: 48
                text: "X"
                on_press: root.math_sign('*')

            Button:
                size_hint: (0.2,0.2)
                font_size: 48
                text: "4"
                on_press: root.button_press(4)
            Button:
                size_hint: (0.2,0.2)
                font_size: 48
                text: "5"
                on_press: root.button_press(5)
            Button:
                size_hint: (0.2,0.2)
                font_size: 48
                text: "6"
                on_press: root.button_press(6)
            Button:
                background_color: (157/255, 157/255, 157/255)
                size_hint: (0.2,0.2)
                font_size: 48
                text: "-"
                on_press: root.math_sign('-')

            Button:
                size_hint: (0.2,0.2)
                font_size: 48
                text: "1"
                on_press: root.button_press(1)
            Button:
                size_hint: (0.2,0.2)
                font_size: 48
                text: "2"
                on_press: root.button_press(2)
            Button:
                size_hint: (0.2,0.2)
                font_size: 48
                text: "3"
                on_press: root.button_press(3)
            Button:
                background_color: (157/255, 157/255, 157/255)
                size_hint: (0.2,0.2)
                font_size: 48
                text: "+"
                on_press: root.math_sign('+')

            Button:
                size_hint: (0.2,0.2)
                font_size: 48
                text: "+/-"
                on_press: root.pos_neg()
            Button:
                size_hint: (0.2,0.2)
                font_size: 48
                text: "0"
                on_press: root.button_press(0)
            Button:
                size_hint: (0.2,0.2)
                font_size: 48
                text: "."
                on_press: root.dot()
            Button:
                background_color: (157/255, 157/255, 157/255)
                size_hint: (0.2,0.2)
                font_size: 48
                text: "="
                on_press: root.equals()
